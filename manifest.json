{
  "manifest_version": 3,
  "name": "複合功能小幫手",
  "version": "1.5",
  "description": "整合多種自用功能的瀏覽器擴充套件。",
  "permissions": [
    "storage",
    "webNavigation",
    "declarativeNetRequest",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "action": {
    "default_icon": {
      "48": "icon/icon-48.png"
    },
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "fx-to-x-redirect@example.com"
    }
  }
}