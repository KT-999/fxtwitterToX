{
  "manifest_version": 3,
  "name": "多功能網頁工具",
  "version": "1.6",
  "description": "提供多種網頁增強功能，例如網址重導向、YouTube 純音訊模式等。",
  "permissions": [
    "storage",
    "webNavigation",
    "declarativeNetRequest",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "*://fxtwitter.com/*",
    "*://vxtwitter.com/*",
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.ytimg.com/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "action": {
    "default_icon": {
      "48": "icon/icon-48.png",
      "128": "icon/icon-128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "fx-to-x-redirect@example.com"
    }
  }
}